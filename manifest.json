{
	"manifest_version": 2,
	"name": "One Page Reader",
	"version": "1.0.0",
	"description": "Allows news articles to be opened directly on one page and not splitted in several pages.",
	"icons": {
		"48": "icon-48.png",
		"96": "icon-96.png"
	},
	"applications": {
		"gecko": {
			"id": "one-page-reader@devattendant.de"
		}
	},
	"background": {
		"scripts": [
			"js/url-utils.js",
			"js/append.js",
			"js/domains.js",
			"js/one-page-reader.js"
		]
	},
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"http://*/*",
		"https://*/*"
	]
}